<div class="authform_large">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :multipart => true}) do |f| %>
    <div class="col-md-12">
       <%= devise_error_messages! %>
       <h3>Sign up</h3>
    </div>
  <div class="row">
<div class="col-md-6">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_area :address, :rows => 3,  class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :cell_phone %>
            <%= f.text_field :cell_phone, class: 'form-control' %>
          </div>
    </div>
    <div class="col-md-6">
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :image_profile %>
            <%= f.file_field :image %>
          </div>

          <div class="form-group">
              <%= f.label :role %> </br>
              <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]} )  %>
          </div> 
        
    </div>
    <div class="col-md-12">
      <%= f.submit 'Sign up', :class => 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>
  <% end %>
</div>
